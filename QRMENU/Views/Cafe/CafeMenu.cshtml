@using QRMENU.Models.Entity
@model List<Menuler>
@{
    ViewBag.Title = "CafeMenu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"> <B>CAFELER</B> / MENÜ LİSTESİ</h1>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"> <b>@ViewBag.cafead</b> / MENÜ LİSTESİ<a href="/Cafe/YeniMenu/@ViewBag.cafeid" class="btn btn-primary float-right">Yeni Menü Ekle</a></h6>

        </div>
        <div class="card-body">
            <asp:Repeater id="Repeater1" runat="server">
                <ItemTemplate>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>MENÜ ADI</th>
                                    <th>DURUM</th>
                                    <th>İŞLEM</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var menu in Model)
                                {
                                    <tr>
                                        <td>@menu.Ad</td>
                                        <td style="color: @(menu.Durum.HasValue && menu.Durum.Value ? "green" : "red")">
                                            @(menu.Durum.HasValue ? (menu.Durum.Value ? "AKTİF" : "PASİF") : "N/A")
                                        </td>
                                        <td>
                                            <a href="/Cafe/MenuSil/@menu.ID" class="btn btn-danger" onclick="return confirm('Gerçekten silmek istiyor musunuz?')">SİL</a>
                                            <a href="/Cafe/MenuGetir/@menu.ID" class="btn btn-primary">GÜNCELLE</a>
                                            <a href="/Kategori/YeniKategori/@menu.ID" class="btn btn-success">KATEGORİ EKLE</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </ItemTemplate>
            </asp:Repeater>
        </div>
    </div>


</div>
<!-- /.container-fluid -->
