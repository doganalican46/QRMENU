@model QRMENU.Models.Entity.Saatler
@{
    ViewBag.Title = "SaatGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"> <B>CAFELER</B> / SAAT GÜNCELLE</h1>

    </div>

    @using (Html.BeginForm("SaatGuncelle", "Cafe", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ID, new { @class = "form-control" })
        <hr />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Saat Ad:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Pazartesi:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Pazartesi, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Salı:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Sali, new { @class = "form-control" })
            </div>
        </div><div class="form-group row">
            <label class="col-sm-2 col-form-label">Çarşamba:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Carsamba, new { @class = "form-control" })
            </div>
        </div><div class="form-group row">
            <label class="col-sm-2 col-form-label">Perşembe:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Persembe, new { @class = "form-control" })
            </div>
        </div><div class="form-group row">
            <label class="col-sm-2 col-form-label">Cuma:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Cuma, new { @class = "form-control" })
            </div>
        </div><div class="form-group row">
            <label class="col-sm-2 col-form-label">Cumartesi:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Cumartesi, new { @class = "form-control" })
            </div>
        </div><div class="form-group row">
            <label class="col-sm-2 col-form-label">Pazar:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Pazar, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Saat Durum:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Durum, new List<SelectListItem>
                {
                    new SelectListItem { Value = "true", Text = "AKTİF" },
                    new SelectListItem { Value = "false", Text = "PASİF" }
                }, "Lütfen durumu seçiniz", new { @class = "form-control" })
            </div>
        </div>

        <hr>
        <div class=" mt-4">
            <a href="/Cafe/Index/" class="btn btn-danger">VAZGEÇ</a>
            <button class="btn btn-primary">GÜNCELLE</button>
        </div>
    }
</div>
<!-- /.container-fluid -->
