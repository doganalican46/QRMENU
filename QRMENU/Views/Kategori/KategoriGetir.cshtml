@model QRMENU.Models.Entity.Kategoriler
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"> <B>KATEGORİ</B> / KATEGORİ GÜNCELLE</h1>
    </div>

    @using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
    {
        <hr />
        <div class="form-group row">
            <label for="KATEGORIAD" class="col-sm-2 col-form-label">Kategori Ad:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
                @Html.HiddenFor(m => m.ID, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label for="URUNDURUM" class="col-sm-2 col-form-label">Kategori Durum:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Durum, new List<SelectListItem>
                {
                    new SelectListItem { Value = "true", Text = "AKTİF" },
                    new SelectListItem { Value = "false", Text = "PASİF" }
                }, "Lütfen durumu seçiniz", new { @class = "form-control" })
            </div>
        </div>


        <hr>
        <div class="mt-4">
            <a href="/Kategori/Index/" class="btn btn-danger">VAZGEÇ</a>
            <button class="btn btn-primary">GÜNCELLE</button>
        </div>
    }
</div>
<!-- /.container-fluid -->
