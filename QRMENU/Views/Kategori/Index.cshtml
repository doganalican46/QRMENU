@using QRMENU.Models.Entity
@model List<TBLKATEGORILER>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">KATEGORİLER</h1>

    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">KATEGORİ LİSTESİ<a href="/Kategori/YeniKategori/" class="btn btn-primary float-right">Yeni Kategori Ekle</a></h6>

        </div>
        <div class="card-body">
            <asp:Repeater id="Repeater1" runat="server">
                <ItemTemplate>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>KATEGORİ</th>
                                    <th>ÜRÜN SAYISI</th>
                                    <th>İŞLEM</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var kategori in Model)
                                {
                                    <tr>
                                        <td>@kategori.KATEGORIAD</td>
                                        <td>@kategori.URUNSAYISI</td>
                                        <td>
                                            <a href="/Kategori/KategoriSil/@kategori.KATEGORIID" class="btn btn-danger" onclick="return confirm('Gerçekten silmek istiyor musunuz?')">SİL</a>
                                            <a href="/Kategori/KategoriGetir/@kategori.KATEGORIID" class="btn btn-primary">GÜNCELLE</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </ItemTemplate>
            </asp:Repeater>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
