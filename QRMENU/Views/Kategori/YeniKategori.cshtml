@using QRMENU.Models.Entity
@model QRMENU.Models.Entity.Kategoriler
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"> <B>KATEGORİ</B> / KATEGORİ EKLE</h1>

    </div>

    <form class="form-group" method="post">
        <p>Menü oluşturmak için ilk olarak yeni bir kategori eklemeniz gerekmektedir.</p>

        <hr />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Kategori Ad:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Ad" placeholder="Kategori adı giriniz..." required="">
                <input type="hidden" class="form-control" name="Durum" value="true">

            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Hangi Menüye Ait Olduğunu Seçiniz:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.MenuID, (List<SelectListItem>)ViewBag.menuler, new { @class = "form-control" })
            </div>
        </div>
        <hr>
        <div class=" mt-4">
            <a href="/Kategori/Index/" class="btn btn-danger">VAZGEÇ</a>
            <button class="btn btn-primary">EKLE</button>
        </div>
    </form>

</div>
<!-- /.container-fluid -->
