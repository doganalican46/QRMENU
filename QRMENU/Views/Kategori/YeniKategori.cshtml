@using QRMENU.Models.Entity
@model List<TBLKATEGORILER>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">KATEGORİLER / <small> KATEGORİ EKLE</small></h1> 

    </div>

    <form class="form-group" method="post">
       
        <hr />
        <div class="form-group row">
            <label for="KATEGORIAD" class="col-sm-2 col-form-label">Kategori Ad:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="KATEGORIAD" placeholder="Kategori adı giriniz..." required="">
            </div>
        </div>
        <hr>
        <div class=" mt-4">
            <a href="/Kategori/Index/" class="btn btn-danger">VAZGEÇ</a>
            <button class="btn btn-primary">EKLE</button>
        </div>
    </form>

</div>
<!-- /.container-fluid -->
