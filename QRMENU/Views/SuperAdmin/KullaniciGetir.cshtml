@model QRMENU.Models.Entity.Kullanicilar

@{
    ViewBag.Title = "KullaniciGetir";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h2 class="mb-5"><b>Kullanıcılar / </b>Kullanıcı Güncelle</h2>
        <br />
    </div>
    <div class="form-group">
        @using (Html.BeginForm("KullaniciGuncelle", "SuperAdmin", FormMethod.Post))
        {
            <div class="card-body">
                @Html.HiddenFor(k => k.ID)
                <BR />
                <label>TC:</label>
                @Html.TextBoxFor(k => k.TC, new { @class = "form-control" })
                <br />
                <label> Ad:</label>
                @Html.TextBoxFor(k => k.Ad, new { @class = "form-control" })
                <br />
                <label>Soyad:</label>
                @Html.TextBoxFor(k => k.Soyad, new { @class = "form-control" })
                <br />
                <label>Mail:</label>
                @Html.TextBoxFor(k => k.Mail, new { @class = "form-control" })
                <br />
                <label>Telefon:</label>
                @Html.TextBoxFor(k => k.Telefon, new { @class = "form-control" })
                <br />
                <label>Doğum Tarihi:</label>
                @Html.TextBoxFor(k => k.DogumTarihi, new { @class = "form-control" })
                <br />
                <label>Şifre:</label>
                @Html.TextBoxFor(k => k.Sifre, new { @class = "form-control" })
                <br />
                <label>Fotograf:</label>
                @Html.TextBoxFor(k => k.Resim, new { @class = "form-control" })
                <br />
                <label>Rol:</label>
                @Html.TextBoxFor(k => k.Rol, new { @class = "form-control" })
                <br />
                <label>Durum:</label>
                @Html.DropDownListFor(k => k.Durum, new List<SelectListItem>
                {
                    new SelectListItem { Text = "AKTİF", Value = "true" },
                    new SelectListItem { Text = "PASİF", Value = "false" }
                }, new { @class = "form-control" })


            </div>

            <div class="card-footer">
                <br />
                <a href="/SuperAdmin/Index/" class="btn btn-danger">Vazgeç</a>
                <button class="btn btn-warning">Güncelle</button>
            </div>
        }
    </div>
</div>



