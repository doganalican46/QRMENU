@using QRMENU.Models.Entity
@model List<TBLKAMPANYALAR>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">KAMPANYALAR / <small> KAMPANYA EKLE</small></h1>

    </div>

    <form class="form-group" method="post">

        <hr />
        <div class="form-group row">
            <label for="KAMPANYAACIKLAMA" class="col-sm-2 col-form-label">Kampanya Açıklama:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="KAMPANYAACIKLAMA" placeholder="Kampanya adı giriniz..." required="">
            </div>
        </div>
        <div class="form-group row">
            <label for="KAMPANYALIURUN" class="col-sm-2 col-form-label">Ürün Seçin:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.TBLURUNLER.URUNID, (List<SelectListItem>)ViewBag.urunler, new { @class = "form-control" })
            </div>
        </div>
        <hr>
        <div class=" mt-4">
            <a href="/Kampanya/Index/" class="btn btn-danger">VAZGEÇ</a>
            <button class="btn btn-primary">EKLE</button>
        </div>
    </form>

</div>
<!-- /.container-fluid -->
