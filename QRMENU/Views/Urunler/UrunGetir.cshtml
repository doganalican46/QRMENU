@model QRMENU.Models.Entity.Urunler
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"> <B>ÜRÜNLER</B> / ÜRÜN GÜNCELLE</h1>

    </div>

    @using (Html.BeginForm("Guncelle", "Urunler", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ID, new { @class = "form-control" })
        <hr />
        <div class="form-group row">
            <label for="URUNAD" class="col-sm-2 col-form-label">Ürün Ad:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="URUNACIKLAMA" class="col-sm-2 col-form-label">Ürün Açıklama:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Aciklama, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="URUNFIYAT" class="col-sm-2 col-form-label">Ürün Fiyat:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Fiyat, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="URUNRESIM" class="col-sm-2 col-form-label">Ürün Resim:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Resim, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="URUNKATEGORI" class="col-sm-2 col-form-label">Kategori Ad:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Kategoriler.ID, (List<SelectListItem>)ViewBag.kategoriler, new { @class = "form-control" })
                @*@Html.TextBoxFor(m => m.URUNKATEGORI, new { @class = "form-control" })*@
            </div>
        </div>
        <div class="form-group row">
            <label for="URUNDURUM" class="col-sm-2 col-form-label">Ürün Durum:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Durum, new List<SelectListItem>
                {
                    new SelectListItem { Value = "true", Text = "AKTİF" },
                    new SelectListItem { Value = "false", Text = "PASİF" }
                }, "Lütfen durumu seçiniz", new { @class = "form-control" })
            </div>
        </div>

        <hr>
        <div class=" mt-4">
            <a href="/Urunler/Index/" class="btn btn-danger">VAZGEÇ</a>
            <button class="btn btn-primary">GÜNCELLE</button>
        </div>
    }
</div>
<!-- /.container-fluid -->
