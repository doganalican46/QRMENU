@model QRMENU.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">URUNLER / <small> URUN EKLE</small></h1>

    </div>

    <form class="form-group" method="post">

        <hr />
        <div class="form-group row">
            <label for="URUNAD" class="col-sm-2 col-form-label">Ürün Ad:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="URUNAD" placeholder="Ürün adı giriniz..." required="">
            </div>
        </div>
        <div class="form-group row">
            <label for="URUNACIKLAMA" class="col-sm-2 col-form-label">Ürün Açıklama:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="URUNACIKLAMA" placeholder="Ürün açıklaması giriniz..." required="">
            </div>
        </div>
        <div class="form-group row">
            <label for="URUNFIYAT" class="col-sm-2 col-form-label">Ürün Fiyat:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="URUNFIYAT" placeholder="Ürün fiyatı giriniz..." required="">
            </div>
        </div>
        <div class="form-group row">
            <label for="URUNRESIM" class="col-sm-2 col-form-label">Ürün Resim:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="URUNRESIM" placeholder="Ürün resim url giriniz..." required="">
                <input type="hidden" class="form-control" name="URUNDURUM" value="1">

            </div>
        </div>
        <div class="form-group row">
            <label for="URUNKATEGORI" class="col-sm-2 col-form-label">Kategori:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m=>m.TBLKATEGORILER.KATEGORIID,(List<SelectListItem>) ViewBag.kategoriler, new {@class="form-control" } )
            </div>
        </div>
        <hr>
        <div class=" mt-4">
            <a href="/Urunler/Index/" class="btn btn-danger">VAZGEÇ</a>
            <button class="btn btn-primary">EKLE</button>
        </div>
    </form>

</div>
<!-- /.container-fluid -->
