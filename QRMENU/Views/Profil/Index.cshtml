@model QRMENU.Models.Entity.Kullanicilar
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">PROFİL <small>/ PROFİL</small></h1>

    </div>

    <nav class="nav nav-borders">
        <a class="nav-link active ms-0"
           href="/Profil/Index/">Profile</a>

        <a class="nav-link" href="/Guvenlik/Index/">Güvenlik</a>

    </nav>
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profil Resmi</div>
                <div class="card-body text-center">
                    <img class="img-account-profile rounded-circle mb-2"
                         src="@((Session["Resim"] ?? "").ToString())" width="150px" height="150px" alt="Kullanıcı Resmi">

                    <div class="small font-italic text-muted mb-4">JPG veya PNG, 5 MB'dan küçük</div>

                    @using (Html.BeginForm("ProfilResmiYukle", "Profil", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <input type="file" name="file" accept=".jpg, .jpeg, .png" class="form-control-file mb-3" />
                        <button class="btn btn-primary" type="submit">Resmi Güncelle</button>
                    }
                </div>
            </div>
        </div>

        <div class="col-xl-8">

            <div class="card mb-4">
                <div class="card-header">Hesap Detayları</div>
                <div class="card-body">
                    @using (Html.BeginForm("Index", "Profil", FormMethod.Post))
                    {

                        <div class="row gx-3 mb-3">

                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">Ad</label>
                                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                            </div>

                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLastName">Soyad</label>
                                @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })

                            </div>
                        </div>


                        <div class="row gx-3 mb-3">

                            <div class="col-md-6">
                                <label class="small mb-1" for="inputEmailAddress">Email Adresi</label>

                                <input name="Mail" class="form-control" id="inputEmailAddress" type="email"
                                       placeholder="Enter your email address" value="@HttpContext.Current.User.Identity.Name">
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputBirthday">Doğum Günü</label>
                                @Html.TextBoxFor(x => x.DogumTarihi, "{0:dd.MM.yyyy}", new { @class = "form-control" })
                            </div>
                        </div>

                        <button class="btn btn-primary">KAYDET</button>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
