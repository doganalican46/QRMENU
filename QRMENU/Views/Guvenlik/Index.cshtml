@model QRMENU.Models.Entity.Kullanicilar
@{
    ViewBag.Title = "Guvenlik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">PROFİL <small>/ GÜVENLİK</small></h1>

    </div>

    <nav class="nav nav-borders">
        <a class="nav-link active ms-0"
           href="/Profil/Index/">Profile</a>

        <a class="nav-link" href="/Guvenlik/Index/">Güvenlik</a>

    </nav>
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-lg-8">
            <!-- Change password card-->
            <div class="card mb-4">
                <div class="card-header">ŞİFRE DEĞİŞTİR</div>
                <div class="card-body">
                    @using (Html.BeginForm("Index", "Guvenlik", FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label class="small mb-1" for="currentPassword">Güncel Şifreniz:</label>
                            <input type="password" name="GuncelSifre" placeholder="Güncel şifrenizi girin..." class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="small mb-1">Yeni Şifreniz:</label>
                            <input type="password" name="YeniSifre" placeholder="Yeni şifrenizi girin..." class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="small mb-1">Yeni Şifreniz (Tekrar):</label>
                            <input type="password" name="YeniSifreTekrar" placeholder="Yeni şifrenizi tekrar girin..." class="form-control" required />
                        </div>

                        <button class="btn btn-primary">KAYDET</button>
                    }
                </div>

            </div>

        </div>
        <div class="col-lg-4">
            <!-- Two factor authentication card-->
            <div class="card mb-4">
                <div class="card-header">SİZE ÖZEL FİYATLAR</div>
                <div class="card-body">
                    <p>Size özel fiyatlar burada gözükecektir...</p>
                    1 Aylık üyelik + (1 Ay Hediye): 29,99 ₺ <small>| Aylık Fiyat | TOPLAM: 29,99 ₺</small>  <br>
                    3 Aylık üyelik + (1 Ay Hediye): 25,99 ₺ <small>| Aylık Fiyat | TOPLAM: 77,97 ₺</small><br>
                    6 Aylık üyelik + (1 Ay Hediye): 20,99 ₺ <small>| Aylık Fiyat | TOPLAM: 125,94 ₺</small><br>
                    12 Aylık üyelik + (1 Ay Hediye): 15,99 ₺ <small>| Aylık Fiyat | TOPLAM: 191,88 ₺</small><br>

                    Sınırsız üyelik: 1999 ₺
                </div>
            </div>
            <!-- Delete account card-->
            <div class="card mb-4">
                <div class="card-header">HESAP SİLME</div>
                <div class="card-body">
                    <p>
                        Eğer hesabı silerseni tüm verileriniz silinir ve üyeliğiniz sona erer. Daha sonra tekrardan üyeliğinizi devam ettirebilirsiniz...
                    </p>
                    <button class="btn btn-danger-soft text-danger" type="button">Okudum ve anladım, Hesabımı sil...</button>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
